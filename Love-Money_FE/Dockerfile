FROM node:20
WORKDIR /app
ARG VITE_REACT_APP_REST_API_KEY
ARG VITE_REACT_APP_REDIRECT_URL
ENV VITE_REACT_APP_REST_API_KEY=${VITE_REACT_APP_REST_API_KEY}
ENV VITE_REACT_APP_REDIRECT_URL=${VITE_REACT_APP_REDIRECT_URL}
COPY package.json yarn.lock ./
RUN yarn
COPY . .
EXPOSE 5173
CMD ["yarn", "dev", "--host", "0.0.0.0"]